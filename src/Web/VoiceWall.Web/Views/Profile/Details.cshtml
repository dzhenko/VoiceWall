@model VoiceWall.Web.ViewModels.Profile.ProfileDetailsViewModel

@section styles{
    @Styles.Render("~/Content/wallItems")
}

@section afterbodyscripts {
    @Scripts.Render("~/bundles/loadingImageHider")
}

<h1 class="text-center">@Model.Profile.FirstName's profile</h1>
<div class="container">
    <div class="row">
        <div class="col-md-2 col-md-offset-1">
            @Html.DivWithImage(Model.Profile.UserImage, new { @class = "user-results-images" })
        </div>
        <div class="col-md-6">
            @{Html.RenderPartial("_ProfileOverviewPartial", Model.Profile);}
        </div>
    </div>
</div>

<div id="main-content-reciever" class="col-md-offset-1 col-md-10">
    @{Html.RenderPartial("_WallItemMultiplePartials", Model.WallItems);}
</div>

@{ Html.RenderPartial("_PlayContentPartial"); }

@{ Html.RenderPartial("_CreateContentPartial"); }

@{Html.RenderPartial("_ClickForMorePartial");}

@section scripts {
    @Scripts.Render("~/bundles/wallItems")
}